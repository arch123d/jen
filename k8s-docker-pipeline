pipeline {
    agent any

    environment {
        DOCKERHUB_REPO = 'archanadhoti11199315/angular'
        BUILD_TAG    = "frontend-pipeline"
        DOCKER_CREDENTIALS_ID = 'dockerhub-credentials-id'
    }

    stages {
        stage('Pull Source Code') {
            steps {
                git 'https://github.com/Shantanu20000/CSS_Host_Site_With_Jenkins_Pipline.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKERHUB_REPO}:${env.BUILD_TAG}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKER_CREDENTIALS_ID) {
                        docker.image('archanadhoti11199315/angular:frontend-pipeline').push()
                    }
                }
            }
        }

        stage('Pull Docker Image from DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', credentials('dockerhub-credentials-id')) {
                        docker.image("${DOCKERHUB_REPO}:${env.BUILD_TAG}").pull(v1)
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    kubernetesDeploy(configs: "k8s-onepod.yaml", kubeconfigId: 'kubeconfig-credentials-id')
                }
            }
        }
    }
}
