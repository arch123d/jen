pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials-id')
        DOCKERHUB_REPO = 'shan20000/angular'
        BUILD_TAG    = "Frontend-pipeline"
        KUBECONFIG_CREDENTIALS = credentials('kubeconfig-credentials-id')
    }

    stages {
        stage('Pull Source Code') {
            steps {
                git 'https://github.com/Shantanu20000/DevOps-Fullstack-App-Project-With-Docker.git/frontend'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKERHUB_REPO}:${env.BUILD_TAG}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'DOCKERHUB_CREDENTIALS') {
                        docker.image("${DOCKERHUB_REPO}:${env.BUILD_TAG}").push(v1)
                    }
                }
            }
        }

        stage('Pull Docker Image from DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'DOCKERHUB_CREDENTIALS') {
                        docker.image("${DOCKERHUB_REPO}:${env.BUILD_TAG}").pull(v1)
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    kubernetesDeploy(configs: "k8s-onepod.yaml", kubeconfigId: 'KUBECONFIG_CREDENTIALS')
                }
            }
        }
    }
}
